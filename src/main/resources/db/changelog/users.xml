    <changeSet id="create-users-table" author="P_Bharath_Kumar">
        <createTable tableName="users">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="full_name" type="varchar(25)" >
                    <constraints nullable = "false"/>
            </column>
            <column name="email" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="bio" type="varchar(255)"/>
            <column name="followers_count" type="int" defaultValue="0"/>

            <column name="following_count" type="int" defaultValue="0"/>
            <column name="profile_pic_url" type="varchar(100)"/>
        </createTable>
    </changeSet>

